<!-- Vertical navbar -->
<div class="vertical-nav bg-white" id="sidebar">
  <div class="py-4 px-3 mb-4 bg-light">
    <% if current_user.photo.present? %>
      <div class="media d-flex align-items-center"><img src="<%= current_user.photo %>" alt="..." width="65" class="mr-3 rounded-circle img-thumbnail shadow-sm">
    <% else %>
      <div class="media d-flex align-items-center"><img src="../assets/images/hotel.png" alt="..." width="65" class="mr-3 rounded-circle img-thumbnail shadow-sm">
    <% end %>
      <div class="media-body">
        <h4 class="m-0"><%= current_user.first_name.capitalize %> <%= current_user.last_name.capitalize %></h4>
        <p class="font-weight-light text-muted mb-0">Responsable du salon de coiffure Cut'n'cool d'Alfortville</p>
      </div>
    </div>
  </div>

  <p class="text-gray font-weight-bold text-uppercase px-3 small pb-4 mb-0">Menu</p>

  <ul class="nav flex-column bg-white mb-0">
    <li class="nav-item">
      <%= link_to dashboard_path, class: "nav-link text-dark bg-light" do %>
        <i class="fa fa-th-large mr-3 text-primary fa-fw"></i>
          Tableau de bord
      <% end %>
    </li>

    <li class="nav-item">
      <%= link_to projects_path, class: "nav-link text-dark bg-light" do %>
        <i class="fa fa-address-card mr-3 text-primary fa-fw"></i>
          Historique
      <% end %>
    </li>

    <li class="nav-item">
      <%= link_to offers_path, class: "btn btn-primary btn-dashboard-page" do %>
          Nouvelle demande
      <% end %>
    </li>
  </ul>

</div>
<!-- End vertical navbar -->
