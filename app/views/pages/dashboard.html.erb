<%= render 'shared/dashboard' %>

<!-- Page content holder -->
<div class="page-content" id="content">
  <!-- Toggle button -->
  <button id="sidebarCollapse" type="button" class="btn btn-light bg-white rounded-pill shadow-sm px-4 mb-4"><i class="fa fa-bars mr-2"></i><small class="text-uppercase font-weight-bold">Toggle</small></button>

  <!-- Demo content -->
  <h2 class="display-4 text-white">Dashboard</h2>
  <p class="lead text-white mb-0">Synth√®se de votre activit√© sur notre plateforme üòá </p>

  <div class="separator"></div>

    <div class="col-lg-12 dashboard-cards top-container">
      <div class="top-in-card">
       <!--  <link href="https://fonts.googleapis.com/css?family=Raleway:400,300,600,800,900" rel="stylesheet" type="text/css">
        <div id="circle-container"></div> -->
        <div id="circle-container">
        <p class="percentage"><strong>0<span>%</span></strong></p>
        </div>
        <p class="top-in-card-text"><em>du projet</em></p>
        <p class="top-in-card-text"><em>en cours</em></p>
      </div>
      <div class="vertical-separator"></div>
       <div class="top-in-card">
        <p class="top-in-card-title"><strong><%= current_user.projects.count %></strong></p>
        <p class="top-in-card-text"><em>Projets termin√©s</em></p>
        <p class="top-in-card-text"><em>avec succes !</em></p>
      </div>
      <div class="vertical-separator"></div>
       <div class="top-in-card">
        <p class="top-in-card-title"><strong>10</strong></p>
        <p class="top-in-card-text"><em>Collaborateurs</em></p>
      </div>
    </div>

      <div class="col-lg-12 d-flex justify-content-between dashboard-cards-map">
        <div class="col-lg-6 dashboard-cards">
          <div id="map"
               style="width: 100%; height: 600px;"
               data-markers="<%= @markers.to_json %>"
               data-center="<%= @marker_center.to_json %>"
               data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
          </div>
        </div>

          <div class="col-lg-6 dashboard-cards">
            <div class="card-product">
              <div class="left-content-project-card">
                <div class="card-product-infos">
                  <div class="desc">
                    <h2>Votre dernier projet</h2>
                    <p>Quantit√© : <%= current_user.projects.last.quantity %> <%= current_user.projects.last.product.product_type.capitalize %>s</p>
                    <p>Deadline : <%= current_user.projects.last.deadline %></p>
                  </div>
                </div>
              </div>
              <div class="right-content-project-card">
                <div class="product-status">
                  <% if current_user.projects.last.status == "termin√©" %>
                  <div class="green-badge"></div>
                  <span><em>Demande termin√©</em></span>
                  <% else %>
                  <div class="orange-badge"></div>
                  <span><em>Demande en cours</em></span>
                  <% end %>
                </div>
              </div>
            </div>
        </div>
      </div>


    <div class="col-lg-12 dashboard-cards-notification">
    </div>


</div>
